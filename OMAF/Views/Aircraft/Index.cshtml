@model OMAF.Models.AircraftBunoViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Workload</h1>

<p>
    <a asp-action="Create">Initiate New MAF</a>
</p>
<form asp-controller="Aircraft" asp-action="Index" method="get">
    <p>
        <select asp-for="AircraftBuno" asp-items="Model.Buno">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aircraft[0].Buno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aircraft[0].SysReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aircraft[0].JobStat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aircraft[0].UDP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aircraft[0].ReleaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Aircraft) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Buno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SysReason)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.JobStat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UDP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
